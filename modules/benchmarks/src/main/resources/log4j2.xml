<?xml version="1.0" encoding="UTF-8"?>
    <Configuration status="ERROR">
        <Appenders>
            <Console name="CONSOLE" target="SYSTEM_OUT" >
                <PatternLayout pattern="%d{ABSOLUTE} %level{length=2} %logger{2} - %msg [%t]%n"/>
            </Console>
            <Async name="ASYNC">
                <AppenderRef ref="CONSOLE" />
            </Async>
        </Appenders>
        <Loggers>
            <Root level="INFO">
                <AppenderRef ref="ASYNC" />
            </Root>
        </Loggers>
    </Configuration>
